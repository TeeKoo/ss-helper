<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tk.teekoo777.startingstrengthhelper" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WorkoutActivity"
            android:label="@string/title_activity_workout" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".LiftListActivity"
            android:label="@string/title_lift_list" >
        </activity>
        <activity
            android:name=".LiftDetailActivity"
            android:label="@string/title_lift_detail"
            android:parentActivityName=".LiftListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tk.teekoo777.startingstrengthhelper.LiftListActivity" />
        </activity>
    </application>

</manifest>
